<Window x:Class="AccountingUI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingUI.Wpf"
        xmlns:controls="clr-namespace:AccountingUI.Wpf.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>            
        </Grid.RowDefinitions>
        
        <controls:NavigationBar FontSize="14" Grid.Row="0"
                                DataContext="{Binding Navigator}"/>

        <ContentControl Content="{Binding Navigator.CurrentViewModel}" Grid.Row="1"/>
    </Grid>
</Window>
